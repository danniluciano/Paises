<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/paisesLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.danielaluciano.paises.MainActivity">

    <TextView
        android:id="@+id/paistextview"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal|center"
        android:text="@string/nome_pais"
        android:textSize="@dimen/smart_size" />

    <ImageView
        android:id="@+id/pais"
        android:layout_width="@dimen/smart_tam"
        android:layout_height="@dimen/tam_image"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:adjustViewBounds="false"
        android:contentDescription="@string/nome_bandeira"
        android:gravity="center"
        app:srcCompat="@drawable/pais" />

    <ImageView
        android:id="@+id/comida"
        android:layout_width="@dimen/smart_tam"
        android:layout_height="@dimen/tam_image"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/nome_comida"
        android:gravity="center"
        app:srcCompat="@drawable/comida" />

    <TextView
        android:id="@+id/comidatextview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/feijoada_name"
        android:textSize="@dimen/smart_size" />

</LinearLayout>
